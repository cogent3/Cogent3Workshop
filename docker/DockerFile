# Start with a base Debian image
FROM debian:bullseye-slim

# Update the package list and install necessary dependencies for building Python packages
RUN apt-get update && \
    apt-get install -y \
    python3 \
    python3-pip \
    build-essential \
    libssl-dev \
    libffi-dev \
    python3-dev

# Upgrade pip
RUN pip3 install --upgrade pip

# Install cogent3 using pip
RUN pip3 install cogent3

# Install Jupyter
RUN pip3 install jupyter

# Optionally, you can install other dependencies or tools you need for your project

# Set up a working directory
WORKDIR /workspace

# Copy a Jupyter Notebook configuration file into the container (see below)
# COPY jupyter_notebook_config.py /root/.jupyter/

# Start Jupyter Notebook
CMD ["jupyter", "notebook", "--ip='0.0.0.0'", "--port=8888", "--notebook-dir=/workspace", "--no-browser", "--allow-root"]
